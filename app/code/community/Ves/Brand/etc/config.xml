<?xml version="1.0"?>  
<config>  
	<modules>  
		<Ves_Brand>  
			<version>1.1.0</version>  
		</Ves_Brand>  
	</modules>  
	<frontend>
		<translate>
			<modules>
				<Ves_Brand>
					<files>
						<default>Ves_Brand.csv</default>
					</files>
				</Ves_Brand>
			</modules>
		</translate>
		 <routers>
            <brand>
                <use>standard</use>
                <args>
                    <module>Ves_Brand</module>
                    <frontName>venusbrand</frontName>
                </args>
            </brand>
        </routers>
		<layout>
			<updates>
				<brand module="ves_brand">
					<file>ves_brand.xml</file>
				</brand>
			</updates>
		</layout>
		<events>
			<controller_action_layout_generate_blocks_after>
				<observers>
					<ves_brand_observer>
						<type>singleton</type>
						<class>Ves_Brand_Model_Observer</class>
						<method>beforeRender</method>
					</ves_brand_observer>
				</observers>
			</controller_action_layout_generate_blocks_after>
	 
        </events>
	</frontend>	
	<global>  		     
		<blocks>
            <ves_brand>
                <class>Ves_Brand_Block</class>
            </ves_brand>
        </blocks>
        <models>
            <ves_brand>
                <class>Ves_Brand_Model</class>
                <resourceModel>ves_brand_mysql4</resourceModel>
            </ves_brand>
            <ves_brand_mysql4>
                <class>Ves_Brand_Model_Mysql4</class>
                <entities>

					<brand>
                        <table>ves_brand_brand</table>
                    </brand>
					<brand_store>
                        <table>ves_brand_brand_store</table>
                    </brand_store>
                </entities>
            </ves_brand_mysql4>
        </models>
        <helpers>
            <ves_brand>
                <class>Ves_Brand_Helper</class>
            </ves_brand>
        </helpers>
        <resources>
            <ves_brand_setup>
                <setup>
                    <module>Ves_Brand</module>
				
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </ves_brand_setup>
            <ves_brand_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </ves_brand_write>
            <ves_brand_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </ves_brand_read>
        </resources>
		<events>
			 
	 
			<controller_front_init_routers>
				<observers>
					<ves_brand_observer>
						<type>singleton</type>
						<class>Ves_Brand_Model_Observer</class>
						<method>initControllerRouters</method>
					</ves_brand_observer>
				</observers>
			</controller_front_init_routers>
        </events>
	</global>  
	<admin>
        <routers>
            <brand>
                <use>admin</use>
                <args>
                    <module>Ves_Brand</module>
                    <frontName>brand</frontName>
                </args>
            </brand>
        </routers>
    </admin>
	<adminhtml>
        <translate>
			<modules>
				<Ves_Brand>
					<files>
						<default>Ves_Brand.csv</default>
					</files>
				</Ves_Brand>
			</modules>
		</translate>
    </adminhtml>	
		
	<default>
        <ves_brand>
            <general_setting>
                <show>1</show>    
                <theme>default</theme>
				<enable_jquery>0</enable_jquery>
				<title>Ves Brand</title>  
				<theme>default</theme>
                <route>ves-brand</route>
				<extension>html</extension>
				<brand_imagesize>124x45</brand_imagesize>
				<enable_icon>1</enable_icon>
			</general_setting>
			 
			<module_setting>
				<enable_scrollmodule>1</enable_scrollmodule>
				<brandnav_parent>0</brandnav_parent>
				<columns>6</columns>
				<scroll_position>content</scroll_position>
				<scroll_title></scroll_title>
				<scrollmod_desc></scrollmod_desc>
				<scroll_display>after</scroll_display>
				<scroll_menuassignment>all</scroll_menuassignment>
				<scroll_typesource>scroll</scroll_typesource>
				<itemvisiable>10</itemvisiable>
				<isvertical>0</isvertical>
				<enable_brandnavmodule>1</enable_brandnavmodule>
				<brandnav_title>Shop By Brand</brandnav_title>
				<isdropdown>0</isdropdown>
				<brandnav_menuassignment>all</brandnav_menuassignment>
				<brandnav_title>Brand Categories</brandnav_title>
				<brandnav_position>right</brandnav_position>
				<brandnav_customposition></brandnav_customposition>
				<brandnav_display></brandnav_display>
				
			</module_setting>
        </ves_brand>
    </default>
</config>  